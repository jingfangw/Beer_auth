// border-radius
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color #00B7FF

// height for boxes
header_height = 80px
button_height = 40px

#header
  border 2px solid black
  border-radius 10px
  height header_height
  padding-top (header_height / 8) 
  padding-bottom (header_height / 8)
  margin-bottom (button_height / 3)
  text-align center

.button
  border 2px solid black
  border-radius 10px
  height button_height
  padding-top (button_height/ 2)
  margin-bottom (button_height/ 3)
  text-align center

.title
  //outline 1px solid black
  text-align right
  width 100px
  padding-right 10px

.center
  text-align center
  height h = button_height
  padding-top (h / 2)  
  margin-bottom (h / 2)
  border 2px solid black
  border-radius 10px

.options
  list-style-type none
  margin 0
  padding 0

.notesList
  list-style-type none

.note
  list-style-type none 
  display inline
  float
  .name 
    //color blue
  .event
    //color green

.hidden
  visibility hidden

.boxsizing_border 
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  -ms-box-sizing border-box

.textarea
  margin 0 auto
  width 97%
  color black
  border 2px solid black
  border-radius 10px
  padding 10px

.currentNote
  margin-bottom 40px

.time
  //color blue
  display inline-block
  //outline 1px solid black
  float right
  clear right

.body
  display inline-block
  //color red
  //outline 1px solid red
  width 85%

.user
  float right
  margin-bottom 10px

.eventname
  display inline-block
  float left
  width 50%

.eventate
  display inline-block
  float right

.footer
  text-align center
  color black
  border 2px solid black
  border-radius 10px
  padding 10px